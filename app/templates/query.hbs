<div class="container">
{{#if categories}}        
    <div class="row">
        {{#each catNames as |cat|}}
            <div class="col-md-3 md-offset-2">
                <h4>{{t (mp 'tags.categories' cat)}}</h4>
                {{selectable-tags target=selectedTags tags=(get categories cat)}}
            </div>
        {{/each}}
    </div>
    <div class="row">
        {{#each selectedTags key="@index" as |tag|}} 
            <a href="#" {{action 'remove' tag}} class="btn btn-xs btn-info"><i class="fa fa-times-circle"></i> {{tag.name}}</a>
        {{/each}}
        {{#if selectedTags.length}}
            <a href="#" {{action 'clear'}} class="btn btn-xs btn-danger"><i class="fa fa-trash"></i> {{t 'tags.clear'}}</a>
        {{/if}}        
    </div>
{{else}}
        <div class="body-header"><h4>{{t 'query.loadingOptions'}} <i class="fa fa-spinner fa-pulse"></i></h4></div>
{{/if}}
    <div class="row">
        {{#if model.playlist}}
            {{partial 'playlist'}}
        {{/if}}
    </div>
</div>

{{outlet}}