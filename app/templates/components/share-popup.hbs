{{yield}}
  <a data-toggle="modal" href="#sharePopup" id="sharePopupTriggerLink" class=""></a>
  <div class="modal fade" id="sharePopup" tabindex="-1" role="dialog" aria-labelledby="sharePopupLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title"><span>{{t "share.share"}}</span> {{upload.upload_name}}</h4>
        </div>
        <div class="modal-body">
            <div class="centered">
<a href="http://www.facebook.com/share.php?u=http://dig.ccmixter.org/files/{{upload.user_name}}/{{upload.upload_id}}&t={{upload.upload_name}}" class="btn btn-default"><span class="glyphicon glyphicon-new-window"></span> {{t "share.fb"}}</a>            
            </div>        
            <div class="centered">
<a href="http://twitter.com/home?status={{upload.upload_name}}+http://dig.ccmixter.org/files/{{upload.user_name}}/{{upload.upload_id}}&t={{upload.upload_name}}" class="btn btn-default"><span class="glyphicon glyphicon-new-window"></span> {{t "share.twitter"}}</a>            
            </div>        
            <div class="centered">
<a href="mailto://?subject={{t "share.subject"}}&body={{t "share.body"}} http://dig.ccmixter.org/files/{{upload.user_name}}/{{upload.upload_id}}" class="btn btn-default"><span class="glyphicon glyphicon-envelope"></span> {{t "share.email"}}</a>
            </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">{{t 'dlPopup.close'}}</button>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
